<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="12.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <Import Project="$(MSBuildThisFileDirectory)\..\build\NuGet.Services.Build.props" />
    <Import Project="$(MSBuildThisFileDirectory)\NuGet.Services.Build.Core.tasks" />

    <PropertyGroup Condition="'$(Configuration)' == ''">
        <Configuration>Debug</Configuration>
    </PropertyGroup>

    <PropertyGroup>
        <VisualStudioVersion>12.0</VisualStudioVersion>
    </PropertyGroup>

    <Target Name="Clean">
        <MSBuild Projects="@(TargetSolution)" Targets="Clean" Properties="Configuration=$(Configuration);Platform=$(Platform)" />
    </Target>

    <ItemGroup>
      <RoleProject Include="$(SourceDirectory)\**\*.ccproj" />
    </ItemGroup>

    <Target Name="RestorePackages">
        <ItemGroup>
            <!-- Package sources used to restore packages. By default will used the registered sources under %APPDATA%\NuGet\NuGet.Config -->
            <PackageSource Include="https://www.nuget.org/api/v2" />
            <PackageSource Include="https://www.myget.org/F/nugetbuild/" />
        </ItemGroup>
        <PropertyGroup>
            <NuGetExePath>$(MSBuildThisFileDirectory)\nuget.exe</NuGetExePath>
            <RestoreCommand>$(NuGetExePath) restore -Source "@(PackageSource)" "@(SolutionFile)" -NonInteractive</RestoreCommand>
        </PropertyGroup>
    
        <Message Text="Restoring packages ... " Importance="high" />
        <DownloadNuGet OutputFilename="$(NuGetExePath)" Condition=" !Exists('$(NuGetExePath)')" />
        <Exec Command="$(RestoreCommand)" LogStandardErrorAsError="true" />
    </Target>
  
    <Target Name="CoreBuild">
        <MSBuild Projects="@(SolutionFile)" Targets="Build" Properties="VisualStudioVersion=12.0;Configuration=$(Configuration);CodeAnalysis=true;Platform=$(Platform);RunFacts=true;TargetProfile=Local;NuGetExePath=$(NuGetExePath);RunTests=true" BuildInParallel="true" ToolsVersion="12.0"  />
        <MSBuild Projects="@(RoleProject)" Targets="Publish" Properties="VisualStudioVersion=12.0;Configuration=$(Configuration);Platform=AnyCPU;TargetProfile=Cloud;NuGetExePath=$(NuGetExePath);SemanticVersion=$(SemanticVersion)" BuildInParallel="false" ToolsVersion="12.0" />
    </Target>

    <Target Name="Build" DependsOnTargets="CheckForMultipleSolutions;Clean;RestorePackages;CoreBuild" />
</Project>